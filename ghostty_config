background = "#000000"
# key-encoding = xterm
# keybind = ctrl+,=text:\x1b[27;5;44~
# keybind = ctrl+, send_text "\x1b[27;5;44~"

cursor-style = bar
cursor-style-blink = true
cursor-color = #ff8800

keybind = ctrl+,=text:\x1b[121;9z

# Tmux can't handle random byte strings.
# It must be an actual key on the keyboard
# So here, we're generating the F1 key
keybind = "cmd+k=text:\x1bOP"

# unset, so that I can use it as duplicate line in emacs
keybind = cmd+d=unbind

keybind = super+alt+left=previous_tab
keybind = super+alt+right=next_tab

keybind = PageUp=text:\x1b[5~
keybind = PageDown=text:\x1b[6~

keybind = cmd+c=text:\x1b[118;9z
keybind = "cmd+s=unbind"
keybind = cmd+s=text:\x1b[119;9z

keybind = cmd+x=text:\x1b[120;9z

keybind = shift+PageUp=scroll_page_up
keybind = shift+PageDown=scroll_page_down
keybind = shift+home=scroll_to_top
keybind = shift+end=scroll_to_bottom
# Plain keys â†’ send escapes to tmux
keybind = home=text:\x1b[H
keybind = end=text:\x1b[F

# Prevent the default Cmd+J behavior if any
keybind = "cmd+j=unbind"
keybind = cmd+j=text:\x1b[114;9z

# Prevent Cmd+Z from being handled by Ghostty itself
keybind = "cmd+z=unbind"

# Send ESC+z when Cmd+Z is pressed
# The only way to get an actual command/super is to use GUI Emacs
# We can't map to Esc as a prefix, because that is Alt's default mapping
# So instead, we're going to map to a uniq charater string
keybind = cmd+z=text:\x1b[108;9z
keybind = "cmd+shift+z=unbind"
keybind = cmd+shift+z=text:\x1b[109;9z
keybind = cmd+d=text:\x1b[110;9z
keybind = "cmd+enter=unbind"
keybind = cmd+enter=text:\x1b[111;9z
keybind = cmd+shift+f=text:\x1b[113;9z
keybind = cmd+e=text:\x1b[122;9z
keybind = cmd+l=text:\x1b[123;9z

keybind = "cmd+alt+up=unbind"
keybind = cmd+alt+up=text:\x1b[115;9z
keybind = "cmd+alt+down=unbind"
keybind = cmd+alt+down=text:\x1b[116;9z

keybind = ctrl+shift+backspace=text:\x1b[117;9z

